{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-backend",
      "type": "shell",
      "command": "cd ${workspaceFolder}/src/monitoring_dashboard/backend/MonitoringDashboard.Api && dotnet build",
      "problemMatcher": "$msCompile",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "start-backend",
      "type": "shell",
      "command": "cd ${workspaceFolder}/src/monitoring_dashboard/backend/MonitoringDashboard.Api && dotnet run",
      "problemMatcher": "$msCompile",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "build-frontend",
      "type": "npm",
      "script": "build",
      "path": "${workspaceFolder}/src/monitoring_dashboard/frontend",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "start-frontend",
      "type": "npm",
      "script": "dev",
      "path": "${workspaceFolder}/src/monitoring_dashboard/frontend",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "install-frontend-deps",
      "type": "npm",
      "script": "install",
      "path": "${workspaceFolder}/src/monitoring_dashboard/frontend",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
