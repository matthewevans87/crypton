{
    "version": "0.2.0",
    "configurations": [
        // ── AgentRunner ────────────────────────────────────────────────
        {
            "name": "Debug AgentRunner",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build: AgentRunner",
            "program": "${workspaceFolder}/src/agent_runner/AgentRunner/bin/Debug/net10.0/AgentRunner.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/agent_runner/AgentRunner",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/scalar/v1"
            },
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Debug AgentRunner (No Build)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/agent_runner/AgentRunner/bin/Debug/net10.0/AgentRunner.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/agent_runner/AgentRunner",
            "stopAtEntry": false,
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Attach to AgentRunner Process",
            "type": "coreclr",
            "request": "attach",
            "processName": "AgentRunner"
        },

