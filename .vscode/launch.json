        // ── Frontend ───────────────────────────────────────────────────
        {
            "name": "Debug Frontend",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src/monitoring_dashboard/frontend/src",
            "preLaunchTask": "start: Frontend"
        }
    ],
    "compounds": [
        {
            // Builds all services sequentially first — if any build fails, nothing launches.
            "name": "Debug All Services",
            "configurations": [
                "Debug AgentRunner (No Build)",
                "Debug MarketDataService (No Build)",
                "Debug MonitoringDashboard.Api (No Build)"
            ],
            "preLaunchTask": "build: All Services",
            "stopAll": true
        }
    ]
